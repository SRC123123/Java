
public class MyStack {

	private int data;
	private Node head;
	private int max;
	
	public MyStack()
	{
		//head = new Node();
		max =0;
	}

	public void push(int data)
	{
		Node temp = new Node();
		temp.prev = head;
		head.next = temp;
		head.data = data;
		head = temp;
		
		if(data > max)
			max=data;
	}
	
	public void pop()
	{
		head = head.prev;
		head.next = null;
	}
	
	public int peak()
	{
		return head.prev.data;
	}
	
	public int getMax()
	{
		return max;
	}
	
	private class Node {
		private int data;
		private Node next;
		private Node prev;
	}

}
